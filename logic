input:

[ [('title', 1)], [('text', 2), ('image', 2)], [('content', 1)] ]


logic:

if lvl < nextLvl then '{'
if lvl == nextLvl then '{\n}'
if lvl > nextLvl then '{\n}\n}'

space = (lvl - 1) * 2

('title', 1) -> [0].title {
('text', 2) -> [2].text {\n}
('image', 2) -> [2].image {\n}\n}
('content', 1) -> [0].content {


output:

.title {
  .text {

  }

  .image {

  }
}

.content {

}
